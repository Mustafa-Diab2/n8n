{
  "name": "n8n-playwright",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "stack": "tsx ./containers/n8n-start-stack.ts",
    "stack:help": "tsx ./containers/n8n-start-stack.ts --help",

    "dev": "TESTCONTAINERS_REUSE_ENABLE=true npm run stack",
    "dev:postgres": "TESTCONTAINERS_REUSE_ENABLE=true npm run stack -- --postgres",
    "dev:queue": "TESTCONTAINERS_REUSE_ENABLE=true npm run stack -- --queue",
    "dev:multi-main": "TESTCONTAINERS_REUSE_ENABLE=true npm run stack -- --mains 3 --workers 5",

    "clean:all": "docker rm -f $(docker ps -aq --filter 'name=n8n-*') 2>/dev/null || true",
    "clean:networks": "docker network prune -f",

    "lint": "eslint . --quiet",
    "lintfix": "eslint . --fix"
  },
  "devDependencies": {
    "@currents/playwright": "^1.14.0",
    "@n8n/api-types": "link:../packages/@n8n/api-types",
    "@playwright/test": "^1.52.0",
    "eslint-plugin-playwright": "^2.2.0",
    "lodash": "catalog:"
  },
  "dependencies": {
    "@testcontainers/postgresql": "^11.0.3",
    "@testcontainers/redis": "^11.0.3",
    "testcontainers": "^11.0.3"
  }
}